@using book_a_reading_room_visit.model
@using book_a_reading_room_visit.web.Helper
@using book_a_reading_room_visit.web.Models
@{
ViewData["Title"] = "Booking confirmation";
}
@model BookingViewModel

<h1 class="display-4">3. Reservation confirmation</h1>

<div class="container content-wrapper">

    <div class="text-center">
        <section class="row" id="progress-bar">
            <h2 class="sr-only">Progress</h2>
            <div class="col-md-12">
                <ol>
                    <li><span class="step-number">1</span> <span class="step">Select a date</span></li>
                    <li><span class="step-number">2</span> <span class="step">Enter your details</span></li>
                    <li aria-current="page" class="active"><span class="step-number">3</span> <span class="step">Reservation confirmation</span></li>
                    <li><span class="step-number">4</span> <span class="step">Order documents</span></li>
                    <li><span class="step-number">5</span> <span class="step">Order complete</span></li>
                </ol>
            </div>
        </section>
    </div>

    <div class="booking-summary text-center">
        <div class="row">
            <div class="col-md-12">
                <div class="prompt-grey full-width success-panel">
                    <h2>You have made a provisional booking to visit the reading rooms</h2>
                    <p>Your booking reference is @(Model.BookingReference). Keep a note of this number for future reference.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <div class="row">
            <div class="col-md-12">
                <div class="prompt-grey full-width warning-panel">
                    To confirm your booking, complete the document order form by
                    <span class="bold-text">@($"{Model.CompleteByDate:dddd dd MMMM yyyy} at {Model.CompleteByDate:hh:mm tt}") British Summer Time (BST).</span>
                </div>
            </div>
        </div>
    </div>

    <div class="booking-details">
        <div class="row">
            <div class="col-md-12">
                <h3>Your reservation details</h3>
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Visit date</th>
                            <td>@($"{Model.BookingStartDate:dddd dd MMMM yyyy}")</td>
                        </tr>
                        <tr>
                            <th scope="row">Visit type</th>
                            <td>
                                @(Model.BookingType == BookingTypes.StandardOrderVisit ? "Standard visit" : "Bulk order visit")
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Reading room</th>
                            @if (Model.BookingType == BookingTypes.StandardOrderVisit)
                            {
                                @if (Model.SeatType == SeatTypes.StdRRSeat)
                                {
                                    <td>Document reading room (All seats have camera stands)</td>
                                }
                                else
                                {
                                    <td>Map and large document reading room</td>
                                }

                            }
                            else
                            {
                                <td>Map and large document reading room</td>
                            }
                        </tr>
                        <tr>
                            <th scope="row">Seat number</th>
                            <td>
                                @Model.SeatNumber
                                <span class="secondary-info">Based on availability, we may need to change your seat on the date of your visit.</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <p>
                    If you provided an email address as part of your booking, a direct link to this form is also in your reservation confirmation email, so you can return to your document order at any point before
                    <span class="bold-text">@($"{Model.CompleteByDate:dddd dd MMMM yyyy} at {Model.CompleteByDate:hh:mm tt}") British Summer Time (BST)</span>. If you can’t see the reservation confirmation email in your inbox, check your spam and junk email folders.
                </p>
                <p>If you did not provide an email address, use the <a target="_blank" rel="noreferrer noopener" href="#">Return to booking form</a> to complete your document order at any point before the deadline.</p>
            </div>
        </div>
    </div>

    <div class="reservation-options">
        <div class="row">
            <div class="col-md-12">
                <a class="button primary" href=""@Url.Action("OrderDocuments", "DocumentOrder",
                                        new { bookingType = @Model.BookingType.ToStringURL(), bookingReference = Model.BookingReference, readerTicket = Model.ReaderTicket } )">Continue to your document order</a>
                <a class="button secondary" href="@Url.Action("Booking", "ContinueLater")">I'd like to continue later</a>
            </div>
        </div>
    </div>
</div>
