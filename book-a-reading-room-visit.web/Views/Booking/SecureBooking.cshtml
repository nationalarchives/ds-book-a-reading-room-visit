@using book_a_reading_room_visit.domain
@using book_a_reading_room_visit.web.Helper
@using book_a_reading_room_visit.web.Models
@model BookingViewModel

@{
    ViewData["Title"] = "Secure booking";
}

<h1 class="display-4">2. Enter your reader's ticket</h1>

<div class="text-center">

    <section class="container">

        <section id="progress-bar">
            <div class="row">
                <div class="col-md-12">
                    <ol>
                        <li><span class="step-number">1</span> <span class="step">Select a date</span></li>
                        <li class="active"><span class="step-number">2</span> <span class="step">Enter your reader's ticket</span></li>
                        <li><span class="step-number">3</span> <span class="step">Reservation confirmation</span></li>
                        <li><span class="step-number">4</span> <span class="step">Order documents</span></li>
                        <li><span class="step-number">5</span> <span class="step">Order complete</span></li>
                    </ol>
                </div>
            </div>
        </section>

        <section class="heading">
            <div class="row">
                <div class="col-md-12">
                    <h2>You are about to book the following space</h2>
                </div>
            </div>
        </section>

        <section class="booking-summary">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="prompt-grey">
                        <p>@(Model.BookingType == BookingTypes.StandardOrderVisit ? "Standard order" : "Bulk order") - @($"{Model.BookingStartDate:dddd dd MMMM}")</p>

                        @if (Model.BookingType == BookingTypes.StandardOrderVisit)
                        {
                            if (Model.SeatType == SeatTypes.StdRRSeat)
                            {
                                <p>Standard document reading room</p>
                            }
                            else
                            {
                                <p>Map and large document reading room</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </section>

        <section class="reader-ticket-form">
            <div class="row">
                <div class="col-md-12">
                    <form action="#" method="GET">
                        <fieldset>
                            <legend class="sr-only">Enter reader ticket number</legend>

                            <div>
                                <label for="reader-ticket-number">To reserve your space, enter your reader's ticket number</label>
                            </div>

                            <input id="reader-ticket-number" name="reader-ticket-number" type="text" placeholder="Enter ticket number" />

                            <button class="button" type="submit">Check ticket details</button>
                        </fieldset>
                    </form>
                    <a href="/">How to register or renew your reader's ticket</a>
                </div>
            </div>
        </section>

        <section id="ticket-details">
            <div class="row">
                <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
                    <div class="prompt-white">
                        <p>Your reservation confirmation will be sent to</p>
                        <p>g*******l@g***l.com</p>
                        <a href="#">Find out how to change your details</a>
                        <small>We haven’t displayed your full email address for privacy and security reasons</small>
                    </div>
                </div>
            </div>
        </section>

        <section class="booking-options">
            <div class="row">
                <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
                    <form action="@Url.Action("BookingConfirmation", "Booking", new { bookingType = @Model.BookingType.ToStringURL() })">
                        <fieldset id="conditions">
                            <legend class="sr-only">Please accept the following conditions to continue with your order</legend>

                            <div>
                                <label for="terms-conditions">Accept <a href="#">terms and conditions</a></label>
                                <input id="terms-conditions" name="terms-conditions" type="checkbox" required />
                            </div>
                            <div>
                                <label for="covid-charter">Accept <a href="#">COVID charter</a></label>
                                <input id="covid-charter" name="covid-charter" type="checkbox" required />
                            </div>
                        </fieldset>

                        <span class="col-md-6 col-sm-6">
                            <a class="button primary" href="@Url.Action("Availability", "Home", new { bookingType = @Model.BookingType.ToStringURL() } )">Back</a>
                        </span>

                        <span class="col-md-6 col-sm-6">
                            <button type="submit" class="button primary">Reserve your space</button>
                        </span>
                    </form>
                </div>
            </div>
        </section>
    </section>
</div>
