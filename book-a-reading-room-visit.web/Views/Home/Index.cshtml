@model book_a_reading_room_visit.model.AvailabilitySummaryModel
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="display-4">Book a visit to view our documents</h1>

<div id="home" class="text-center">

    <div class="container content-wrapper">

        <div class="heading text-left standfirst">
            <div class="row">
                <div class="col-md-12">
                    <p>
                        You can use this service to book a visit to view our documents. You may book a maximum of two visits in 4 weeks.
                    </p>

                    <a href="#">
                        Find out more about how to book and what to expect.
                    </a>
                </div>
            </div>
        </div>

        <div class="prompt-white primary-box">
            <div class="row">
                <div class="col-md-12">
                    <h2>Before you book</h2>
                    <p>You will need your reader’s ticket number to complete your booking.</p>
                    <a target="_blank" rel="noreferrer noopener" href="@Environment.GetEnvironmentVariable("ReaderRegisterURL")">Register for or renew a reader’s ticket</a>
                </div>
            </div>
        </div>

        <div class="row">
            <section class="order-option">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="card">
                        <div class="order-option-heading">
                            <h2>Book a standard visit</h2>
                            <p class="bold-text">@Model.StandardBookingAvailable.ToString("N0") spaces available</p>
                        </div>

                        <ul>
                            <li>Documents can be from <span class="bold-text">multiple series</span><br>e.g. ADM 22 and C 142</li>
                            <li>1-day visit</li>
                            <li>Up to 12 documents</li>
                            <li>Camera stands and computer access available</li>
                        </ul>

                        <a class="button primary" href="@Url.Action("Availability", "Home", new { bookingType = "standard-order-visit" })">Select a date</a>
                    </div>
                </div>
            </section>

            <section class="order-option">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="card">
                        <div class="order-option-heading">
                            <h2>Book a bulk order visit</h2>
                            <p class="bold-text">@Model.BulkBookingsAvailable.ToString("N0") spaces available</p>
                        </div>

                        <ul>
                            <li>Documents have to be from <span class="bold-text">one series</span><br>e.g. ADM 22</li>
                            <li>2-day visit</li>
                            <li>Between 20 - 40 documents</li>
                            <li>Camera stands and computer access available</li>
                        </ul>

                        <a class="button primary" href="@Url.Action("Availability", "Home", new { bookingType = "bulk-order-visit" })">Select a date</a>
                    </div>
                </div>
            </section>
        </div>

        <section class="prompt-white">
            <div class="row">
                <div class="col-md-12">
                    <h2>Return to your booking</h2>
                    <p>See order details for an upcoming visit using your booking reference and reader’s ticket number.</p>
                    <a href="@Url.Action("ReturnToBooking", "Booking")">View or edit your document order</a>
                </div>
            </div>
        </section>
    </div>
</div>
