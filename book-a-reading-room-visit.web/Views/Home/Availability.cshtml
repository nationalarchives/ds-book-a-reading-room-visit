@using book_a_reading_room_visit.web.Models;

@{
    ViewData["Title"] = "Visit availability";
}

@model OrderType

<h1 class="display-4">1. Select a date</h1>

<div class="text-center">

    <section class="container">

        <section id="progress-bar">
            <div class="row">
                <div class="text-center">
                    <ol>
                        <li class="active"><span class="step-number">1</span> <span class="step">Select a date</span></li>
                        <li><span class="step-number">2</span> <span class="step">Enter your reader's ticket</span></li>
                        <li><span class="step-number">3</span> <span class="step">Reservation confirmation</span></li>
                        <li><span class="step-number">4</span> <span class="step">Order documents</span></li>
                        <li><span class="step-number">5</span> <span class="step">Order complete</span></li>
                    </ol>
                </div>
            </div>
        </section>

        <section>
            <div class="row">
                <div class="col-md-4 col-sm-4">
                    @if (Model == OrderType.StandardOrderVisit)
                    {
                        <h2>Standard visit availability</h2>
                    }

                    else
                    {
                        <h2>Bulk visit availability</h2>
                    }
                </div>
            </div>
        </section>

        <section>
            <div class="row">
                @if (Model == OrderType.StandardOrderVisit)
                {
                    <form id="room-selection-form" action="@Url.Action("Availability", "Home", new { orderType = @Model.ToStringURL() } )" method="POST">
                        <div class="col-md-4 col-sm-4">
                            <section id="room-selection">
                                <fieldset>
                                    <legend class="sr-only">Select reading room</legend>

                                    <div>
                                        <label for="standard-room">Standard reading room</label>
                                        <input name="room-type" id="standard-room" type="radio" value="standard" checked />
                                    </div>

                                    <div>
                                        <label for="map-and-lg-room">Map and large document</label>
                                        <input name="room-type" id="map-and-lg-room" type="radio" value="map-and-lg" />
                                    </div>

                                </fieldset>
                            </section>

                            <button class="button" type="submit">Update</button>
                        </div>
                    </form>
                }

                else
                {
                    <div class="col-md-4 col-sm-4">
                        <h3>Standard reading room only</h3>
                    </div>
                }

                <section id="date-selection">
                    <div class="col-md-8 col-sm-8">
                        <ul>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Tuesday 15 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Wednesday 16 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Thursday 17 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Friday 18 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Saturday 19 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Tuesday 22 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Wednesday 23 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Thursday 24 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Friday 25 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                            <li class="date">
                                <a href="/@Model.ToStringURL()/secure-booking/@Guid.NewGuid().ToString()?orderType=@Model.ToStringURL()&readingRoom=standard&cameraStand=true">

                                    <span class="col-md-6">Saturday 26 February</span>
                                    <span class="col-md-6">X places available</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </section>
            </div>
        </section>
    </section>
</div>