@using book_a_reading_room_visit.domain
@using book_a_reading_room_visit.web.Helper
@model book_a_reading_room_visit.web.Models.AvailabilityViewModel
@{
    ViewData["Title"] = "Visit availability";
}

<h1 class="display-4">1. Select a date</h1>

<div class="text-center">

    <section class="container">

        <section id="progress-bar">
            <div class="row">
                <div class="text-center">
                    <ol>
                        <li class="active"><span class="step-number">1</span> <span class="step">Select a date</span></li>
                        <li><span class="step-number">2</span> <span class="step">Enter your reader's ticket</span></li>
                        <li><span class="step-number">3</span> <span class="step">Reservation confirmation</span></li>
                        <li><span class="step-number">4</span> <span class="step">Order documents</span></li>
                        <li><span class="step-number">5</span> <span class="step">Order complete</span></li>
                    </ol>
                </div>
            </div>
        </section>

        <section>
            <div class="row">
                <div class="col-md-4 col-sm-4">
                    @if (Model.BookingType == BookingTypes.StandardOrderVisit)
                    {
                        <h2>Standard visit availability</h2>
                    }

                    else
                    {
                        <h2>Bulk visit availability</h2>
                    }
                </div>
            </div>
        </section>

        <section>
            <div class="row">
                @if (Model.BookingType == BookingTypes.StandardOrderVisit)
                {
                    <form id="visit-customisation-form" action="@Url.Action("Availability", "Home", new { bookingType = @Model.BookingType.ToStringURL() })" method="POST">
                        @Html.AntiForgeryToken()
                        <div class="col-md-4 col-sm-4">
                            <section id="room-selection">
                                <fieldset>
                                    <legend class="sr-only">Select reading room</legend>

                                    <div>
                                        <label for="standard-room">Standard reading room</label>
                                        @Html.RadioButtonFor(Model => Model.SeatType, SeatTypes.StdRRSeat, new { id = "standard-room" })
                                    </div>

                                    <div>
                                        <label for="map-and-lg-room">Map and large document reading room</label>
                                        @Html.RadioButtonFor(Model => Model.SeatType, SeatTypes.MandLRR, new { id = "map-and-lg-room" })
                                    </div>
                                </fieldset>
                            </section>

                            <button class="button" type="submit">Update</button>
                        </div>
                    </form>
                }
                <section id="date-selection">
                    <div class="col-md-8 col-sm-8">
                        <ul>
                            @for (var index = 0; index < Model.AvailableBookings.Count; index++)
                            {
                                <li class="date">
                                    <form action="@Url.Action("SecureBooking", "Booking", new { bookingType = @Model.BookingType.ToStringURL() })" method="POST">
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(Model => Model.SeatType)
                                        @Html.Hidden("bookingDate", Model.AvailableBookings[index].Date)
                                        <button class="button" type="submit">
                                            <span class="col-md-6">@Model.AvailableBookings[index].ToDate</span>
                                            <span class="col-md-6">@Model.AvailableBookings[index].AvailableSeats places available</span>
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </section>
            </div>
        </section>
    </section>
</div>