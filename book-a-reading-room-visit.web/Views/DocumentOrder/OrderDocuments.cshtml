@using book_a_reading_room_visit.web.Models;

@{
    ViewData["Title"] = "Order documents";
}

@model BookingViewModel

<h1 class="display-4">Book a visit to view our documents</h1>

<div class="text-center">

    <section class="container">

        <div class="container-heading">
            <h2>Order documents for your visit</h2>
        </div>

        <section class="booking-details">
            <div class="row">
                <h3>Your booking details</h3>

                <div class="col-md-6">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row">Booking reference</th>
                                <td>RR23610</td>
                            </tr>
                            <tr>
                                <th scope="row">Seat type</th>
                                <td>Document reading room, with camera stand</td>
                            </tr>
                            <tr>
                                <th scope="row">Visit date</th>
                                <td>20 January (one day visit)</td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="/">Cancel this booking ></a>
                </div>
            </div>
        </section>

        <section class="prompt-white">
            <div class="row">
                <div class="col-md-12">
                    <p>
                        You can add to or remove documents from this order <span class="bold-text">until 23:59 on Monday 16 January</span>
                    </p>
                </div>
            </div>
        </section>

        <section class="order-form">
            <div class="row">
                <div class="col-md-12">
                    <form action="@Url.Action("DocumentOrder", "DocumentOrder", new { orderType = @Model.OrderType.ToStringURL(), bookingReference = @Guid.NewGuid().ToString() } )" method="POST">

                        @if (Model.OrderType == OrderType.StandardOrderVisit)
                        {
                            @await Html.PartialAsync("Partials/_StandardOrderForm")
                        }

                        else
                        {
                            @await Html.PartialAsync("Partials/_BulkOrderForm")
                        }

                        <fieldset>
                            <legend>
                                <label for="additional-reqs">Additional access requirements or research requests</label>
                            </legend>

                            <p>This should reflect the specific additional services we accomodate</p>

                            <textarea id="additional-reqs" name="additional-reqs"></textarea>
                        </fieldset>

                        <button class="button" type="submit">Add these to your order</button>
                    </form>
                </div>
            </div>
        </section>
    </section>
</div>